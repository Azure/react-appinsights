{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "testPathIgnorePatterns": [
    "node_modules",
    "legacy",
    "dist",
    "dist-esm"
  ],
  "testResultsProcessor": "./node_modules/jest-junit-reporter",
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/"
  ],
  "coverageReporters": [
    "cobertura",
    "lcov",
    "text"
  ]
}